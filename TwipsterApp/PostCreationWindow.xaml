<Window x:Class="TwipsterApp.PostCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwipsterApp"
        mc:Ignorable="d"
        Title="PostCreationWindow" Height="160" Width="283">
    <Grid>
        <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Width="127" Click="OnCancelButtonClicked"/>
        <Button Name="CreatePostButton" Content="Create post" HorizontalAlignment="Left" Margin="147,114,0,0" VerticalAlignment="Top" Width="126" Click="OnCreatePostButtonClicked"/>
        <TextBox Name="PostContentTextBox" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="263" Height="99"/>
    </Grid>
</Window>
