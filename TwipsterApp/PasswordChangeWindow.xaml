<Window x:Class="TwipsterApp.PasswordChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwipsterApp"
        mc:Ignorable="d"
        Title="Password change" Height="317" Width="239" ResizeMode="NoResize">
    <Grid Margin="0,0,10,20">
        <Button Name="CancelButton" Content="Cancel" FontSize="18" HorizontalAlignment="Left" Height="27" Margin="22,238,0,0" VerticalAlignment="Top" Width="82" Click="OnCancelButtonClicked"/>
        <Label Content="Old password" HorizontalAlignment="Center" Margin="0,8,0,0" VerticalAlignment="Top" VerticalContentAlignment="Bottom" Width="186" Height="36"/>
        <PasswordBox Name="OldPasswordPasswordBox" HorizontalAlignment="Center" Margin="0,44,0,0" VerticalAlignment="Top" Width="186" Height="34"/>
        <Label Content="New password" HorizontalAlignment="Center" Margin="0,78,0,0" VerticalAlignment="Top" VerticalContentAlignment="Bottom" Width="186" Height="37"/>
        <PasswordBox Name="NewPasswordPasswordBox" HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top" Width="186" Height="35"/>
        <Label Content="Repeat new password" HorizontalAlignment="Center" Margin="0,151,0,0" VerticalAlignment="Top" VerticalContentAlignment="Bottom" Width="186" Height="34"/>
        <PasswordBox Name="RepeatNewPasswordPasswordBox" HorizontalAlignment="Center" Margin="0,185,0,0" VerticalAlignment="Top" Width="186" Height="32"/>
        <Button Name="ChangePasswordButton" Content="Change" FontSize="18" HorizontalAlignment="Left" Height="27" Margin="109,238,0,0" VerticalAlignment="Top" Width="97" Click="OnChangePasswordButtonClicked"/>
    </Grid>
</Window>
